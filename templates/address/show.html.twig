{% extends 'base.html.twig' %}

{% block title %}Address{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mb-5">Address Index</h1>

        {% if address|length > 0 %}
            <table class="table">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Street</th>
                    <th>City</th>
                    <th>Zip</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ address.id }}</td>
                        <td>{{ address.street }}</td>
                        <td>{{ address.city }}</td>
                        <td>{{ address.zip }}</td>
                        <td>

                        </td>
                    </tr>
                </tbody>
            </table>
        {% else %}
            <p class="text-muted">No records found.</p>
        {% endif %}

        <div class="row mt-3">
            <div class="col-sm-12">
                <a href="{{ path('app_address_new') }}" class="btn btn-success">Create new</a>
            </div>
        </div>
    </div>
{% endblock %}
